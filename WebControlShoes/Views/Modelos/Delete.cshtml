@model WebControlShoes.Models.Modelos
@{
    ViewData["Title"] = "Eliminar Modelo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Eliminar Modelo</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteModelos">

                <input type="hidden" asp-for="SKU" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" disabled/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Eliminar Modelo" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{ 

    @{ <partial name="_ValidationScriptsPartial" />}
}